<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.DarkStatus" />

    <style name="AppTheme.Toolbar" parent="AppTheme.NoActionBar">
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="actionMenuTextColor">@color/colorTextDark</item>
        <item name="android:textColorSecondary">@color/colorTextDark</item>
        <item name="fontPath">@string/default_title_font</item>
    </style>

    <style name="AppTheme.Toolbar.PopupOverlay" parent="AppTheme.PopupOverlay">
        <item name="fontPath">@string/default_text_font</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="fontPath">@string/default_title_font</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>